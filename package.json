{
  "name": "pemerintah-bot",
  "version": "1.0.0",
  "description": "Indonesian news monitoring bot for Discord",
  "main": "src/index.ts",
  "type": "module",
  "scripts": {
    "setup": "bun run setup.ts",
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --outdir=dist --target=bun",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts"
  },
  "keywords": ["news", "discord", "bot", "indonesia", "monitoring"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "rss-parser": "^3.13.0",
    "cron": "^3.1.7",
    "axios": "^1.7.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "bun-types": "^1.2.14",
    "eslint": "^8.56.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0"
  }
}